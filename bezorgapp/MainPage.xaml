<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bezorgapp.MainPage"
             Title="Dashboard">

    <VerticalStackLayout VerticalOptions="Start" Padding="20, 40, 20, 20" Spacing="25">

        <Label 
            Text="Welkom, Bezorger!"
            FontSize="24"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <Grid ColumnDefinitions="*,*" ColumnSpacing="15">

            <Button Grid.Column="0"
                    x:Name="BekijkOrdersButton"
                    Text="Bekijk Orders" 
                    Clicked="OnBekijkOrdersClicked"
                    Style="{StaticResource PrimaryButton}" />

            <Button Grid.Column="1"
                    x:Name="ScanBarcodeButton"
                    Text="Scan Barcode" 
                    Clicked="OnActionButtonClicked"
                    Style="{StaticResource SecondaryButton}" />
        </Grid>
        
    </VerticalStackLayout>

</ContentPage>