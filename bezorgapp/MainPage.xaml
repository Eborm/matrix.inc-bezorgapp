<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bezorgapp.MainPage"
             Title="                     Home">

    <VerticalStackLayout
        Spacing="0">
        
        <BoxView 
            HeightRequest="1"
            BackgroundColor="Gray"
            HorizontalOptions="Fill" />
        
        <VerticalStackLayout
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="Center"
            Spacing="25"
            Margin="0,20,0,0">
            
            
            <Label 
                Text="API Test"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button 
                x:Name="ApiTestButton"
                Text="Test API Verbinding"
                SemanticProperties.Hint="Klik om de API verbinding te testen"
                Clicked="OnApiTestButtonClicked"
                HorizontalOptions="Center" />
            
            <Button 
                Text="Bekijk Orders"
                Clicked="OnBekijkOrdersClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>

    </VerticalStackLayout>
    
</ContentPage>