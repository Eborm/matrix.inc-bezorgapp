<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Color x:Key="Primary">#FF7700</Color>
    <Color x:Key="PrimaryDark">#CC6000</Color>
    <Color x:Key="PrimaryLight">#FF9933</Color>

    <Color x:Key="Secondary">#343a40</Color>

    <Color x:Key="Success">#28a745</Color>
    <Color x:Key="Danger">#dc3545</Color>
    <Color x:Key="Warning">#ffc107</Color>
    <Color x:Key="Info">#17a2b8</Color>

    <Color x:Key="LightGrey">#F0F0F0</Color>
    <Color x:Key="MidGrey">#CCCCCC</Color>
    <Color x:Key="DarkGrey">#333333</Color>

    <Color x:Key="TextPrimary">#1F1F1F</Color>
    <Color x:Key="TextSecondary">#757575</Color>

    <Color x:Key="PageBackgroundColor">#FFFFFF</Color>
    <Color x:Key="CardBackgroundColor">#FFFFFF</Color>

    <Color x:Key="PageBackgroundColorDark">#121212</Color>
    <Color x:Key="CardBackgroundColorDark">#1E1E1E</Color>
    <Color x:Key="TextPrimaryDark">#FFFFFF</Color>
    <Color x:Key="TextSecondaryDark">#A9A9A9</Color>

</ResourceDictionary>